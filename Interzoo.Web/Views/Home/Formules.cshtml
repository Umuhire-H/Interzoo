<!-- pricing plans -->
<section class="py-lg-5 py-4" id="plans">
    <div class="container py-md-5">
        <div class="title-desc text-center pb-sm-3">
            <h3 class="main-title-w3pvt">Our Packages</h3>
            <p> Choose the One and start helping your animal</p>
        </div>
        <div class="row price-row">
            @{
                foreach (var item in Model.Formules)
                {
                        <div class="col-lg-4 col-sm-6 column mb-lg-0 mb-4">
                                        <div class="box" data-blast="borderColor">
                                            <div class="title">
                                                <span class="fa fa-gg" data-blast="color"></span>
                                                <h5 data-blast="color">@item.Nom</h5>
                                            </div>
                                            <div class="price">
                                                <h6>Price - <sup>$</sup><span class="font-weight-bold">@item.Prix</span></h6>
                                            </div>
                                            <div class="option">
                                                <ul>
                                                    <li>@item.Description</li>

                                                </ul>
                                            </div>
                                            
                                            <a href="~/Parrain/Home/ChosenFormule/@item.IdFormule" class="btn w3ls-btn bg-theme  d-block">Send</a>
                                        </div>
                        </div>      
                }
            }
          
        </div>
    </div>
</section>
<!-- //pricing plans -->
<!-- header -->
@section header{
    @{
        Html.RenderPartial("~/Views/Shared/_Header.cshtml");
    }
}

